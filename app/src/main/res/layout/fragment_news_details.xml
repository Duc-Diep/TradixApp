<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/layout_header"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="30dp"
        android:background="@drawable/ic_bgr_new_article"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:src="@drawable/icons_8_expand_arrow"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/btn_back"
            android:id="@+id/tv_name"
            android:layout_centerVertical="true"
            style="@style/TextStyle9"
            android:text="EDITORIAL NEWS" />
        <ImageView
            android:id="@+id/menu_ver"
            android:src="@drawable/icons_8_menu_vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        app:layout_constraintTop_toBottomOf="@id/layout_header"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="-20dp"
        android:background="@drawable/bgr_title"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:id="@+id/layout_title"
            android:layout_width="wrap_content"
            android:padding="17dp"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_title_news_detail"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_picture"
            android:layout_below="@id/layout_title"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="40dp"
            android:layout_height="200dp">
            <ImageView
                android:id="@+id/img_main"
                android:src="@drawable/raggruppa_16"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_time"
                style="@style/TextStyle24"
                android:text="02 Set 2020"
                android:layout_alignParentBottom="true"/>
            <ImageView
                android:src="@drawable/icons_8_calendar"
                android:layout_above="@id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_question"
                android:text="What is the future of cryptocurrencies?"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="#6021ea"
                android:gravity="right"
                android:padding="2dp"
                android:maxWidth="170dp"
                style="@style/TextStyle26"/>
            <TextView
                style="@style/TextStyle25"
                android:text="CRYPTOCURRENCY"
                android:layout_marginBottom="15dp"
                android:padding="3dp"
                android:layout_alignParentRight="true"
                android:layout_above="@id/tv_question"
                android:background="@drawable/bgr_aqua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <ScrollView
            android:layout_below="@id/layout_picture"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginHorizontal="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
