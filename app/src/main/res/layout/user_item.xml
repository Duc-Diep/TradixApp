<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginVertical="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_name"
        android:text="Kim Anh"
        android:layout_marginBottom="5dp"
        style="@style/TextStyle11"/>
    <TextView
        android:id="@+id/tv_address"
        android:layout_below="@id/tv_name"
        android:text="Hai Duong"
        style="@style/TextStyle12"/>
    <TextView
        android:id="@+id/tv_time"
        style="@style/TextStyle13"
        android:text="10:12:12"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/tv_address"
        android:layout_below="@id/tv_name"/>
    <TextView
        android:id="@+id/current_point"
        android:background="@drawable/bgr_point_green"
        android:text="20.047,50"
        android:paddingHorizontal="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        android:layout_marginBottom="2dp"
        android:layout_alignParentRight="true"
        style="@style/TextStyle14"/>
    <TextView
        android:id="@+id/add_point"
        android:layout_alignParentRight="true"
        android:layout_below="@id/current_point"
        android:text="+203 (+1,04%)"
        style="@style/TextStyle15"/>
</RelativeLayout>