<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <ImageView
        android:id="@+id/memu_item_icon"
        android:src="@drawable/icons_8_alarm"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:background="@drawable/bgr_gradient_purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_menu_item"
        android:layout_toRightOf="@id/memu_item_icon"
        android:text="Alerts"
        android:layout_marginLeft="10dp"
        style="@style/TextStyle29"
        android:layout_centerVertical="true" />
</RelativeLayout>