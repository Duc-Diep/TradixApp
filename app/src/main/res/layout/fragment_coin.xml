<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_marginTop="25dp"
            android:src="@drawable/icons_8_expand_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/btn_back"
            android:id="@+id/tv_name"
            style="@style/TextStyle9"
            android:text="NEO INDEX" />
        <TextView
            android:id="@+id/tv_money_type_1"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/btn_back"
            style="@style/TextStyle12"
            android:text="USD" />
        <TextView
            android:id="@+id/tv_location"
            style="@style/TextStyle12"
            android:layout_below="@id/tv_name"
            android:layout_toRightOf="@id/tv_money_type_1"
            android:layout_marginLeft="30dp"
            android:text="Binance" />
        <ImageView
            android:id="@+id/menu_ver"
            android:src="@drawable/icons_8_menu_vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_toLeftOf="@id/menu_ver"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:backgroundTint="@color/black_three"
            android:layout_margin="15dp"
            android:src="@drawable/icons_8_alarm"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_info"
        app:layout_constraintTop_toBottomOf="@id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="15dp"
        android:background="@drawable/gradient_button">
        <ImageView
            android:id="@+id/img_increase"
            android:layout_centerVertical="true"
            android:src="@drawable/icons_8_long_arrow_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_money"
            android:layout_centerVertical="true"
            android:text="21,1637"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/img_increase"
            style="@style/TextStyle17"/>
        <TextView
            android:id="@+id/tv_money_type_2"
            android:text="USD"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_money"
            android:layout_centerVertical="true"
            style="@style/TextStyle18"/>
        <TextView
            style="@style/TextStyle19"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="+2,0634 (+9,44%)"/>
        <TextView
            android:layout_below="@id/tv_money"
            style="@style/TextStyle20"
            android:text="17:00:33 Real time"
            android:layout_toRightOf="@id/img_increase"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_chart"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_back"
            android:src="@drawable/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="NEO Chart"
            android:paddingHorizontal="20dp"
            android:paddingBottom="7dp"
            android:paddingTop="4dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bgr_chart"
            style="@style/TextStyle14"/>
        <ImageView
            android:id="@+id/img_next"
            android:src="@drawable/icon_next"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_chart_info"
        android:background="@drawable/ic_bgr_chart"
        app:layout_constraintTop_toBottomOf="@id/layout_chart"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="250dp">
        <ImageView
            android:src="@drawable/neo_chart"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        app:layout_constraintTop_toBottomOf="@id/layout_chart_info"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bgr_title"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:id="@+id/layout_title"
            android:layout_width="wrap_content"
            android:padding="17dp"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_title"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_buy"
            android:layout_below="@id/layout_title"
            android:text="Buy or Sell for NEO"
            android:layout_marginLeft="30dp"
            android:layout_marginVertical="20dp"
            style="@style/TextStyle21"/>
        <ImageView
            android:src="@drawable/ic_chart_1"
            android:layout_below="@id/tv_buy"
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/mkt_cap"
            android:layout_alignParentRight="true"
            android:text="Mkt Capitalization"
            android:layout_marginRight="60dp"
            android:layout_marginVertical="20dp"
            style="@style/TextStyle21"
            android:layout_below="@id/layout_title" />
        <ImageView
            android:layout_below="@id/mkt_cap"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45dp"
            android:src="@drawable/ic_chart_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>